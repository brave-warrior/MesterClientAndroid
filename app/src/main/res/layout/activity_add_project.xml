<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.khmelenko.lab.mester.activity.management.AddProjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="@string/add_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <EditText
            android:id="@+id/addProjectName"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <Button
            android:id="@+id/addProjectDoneBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_project_done_btn"
            android:inputType="text"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/addProjectProgressBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:visibility="gone"/>

</FrameLayout>
