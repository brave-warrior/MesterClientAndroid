<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.khmelenko.lab.mester.activity.management.AddTestcaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="@string/add_testcase_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <EditText
            android:id="@+id/addTestcaseTitle"
            android:maxLines="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="text"/>

        <Button
            android:id="@+id/addTestcaseDoneBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_testcase_done_btn" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/addTestcaseProgressBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:visibility="gone"/>

</FrameLayout>