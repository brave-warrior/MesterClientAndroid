<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khmelenko.lab.mester" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MesterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Main screen -->
        <activity
            android:name=".activity.MainActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add Project screen -->
        <activity
            android:name=".activity.AddProjectActivity_"
            android:label="@string/add_project_title" >
        </activity>

        <!-- TestCases screen -->
        <activity
            android:name=".activity.TestcasesActivity_"
            android:label="@string/title_activity_testcases" >
        </activity>

        <!-- Add testcase screen -->
        <activity
            android:name=".activity.AddTestcaseActivity_"
            android:label="@string/title_activity_add_testcase" >
        </activity>

        <!-- Steps screen -->
        <activity
            android:name=".activity.StepsActivity_"
            android:label="@string/title_activity_steps" >
        </activity>

        <!-- Add step screen -->
        <activity
            android:name=".activity.AddStepActivity_"
            android:label="@string/title_activity_add_step" >
        </activity>
    </application>

</manifest>
